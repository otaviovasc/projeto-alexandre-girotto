<h1>New Info for <%= @cabana.name %></h1>

<%= form_with model: [:admin, @cabana, @info_da_cabana], local: true do |form| %>
  <div>
    <%= form.label :info_type %>
    <%= form.select :info_type, InfoDaCabana::INFO_TYPES %>
  </div>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.submit 'Create Info', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', admin_cabana_info_da_cabanas_path(@cabana) %>
