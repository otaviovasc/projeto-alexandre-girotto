<h1>Manage Workers</h1>

<%= link_to 'New Manager', new_admin_user_path %>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Filial</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.filial ? user.filial.name : 'None' %></td>
        <td>
          <%= link_to 'Edit', edit_admin_user_path(user) %>
          <%= link_to 'Delete', admin_user_path(user), data: { turbo_method: :delete } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
