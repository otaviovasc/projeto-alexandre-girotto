<h1>Edit Cabana</h1>

<%= form_with model: [:admin, @cabana], local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :price %>
    <%= form.number_field :price, step: 0.01 %>
  </div>

  <div>
    <%= form.label :filial %>
    <%= form.collection_select :filial_id, Filial.all, :id, :name %>
  </div>

  <div>
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true %>
    <p>Existing images:</p>
    <ul>
      <% @cabana.images.each do |image| %>
        <li><%= image_tag image.variant(resize_to_limit: [100, 100]) %></li>
      <% end %>
    </ul>
  </div>

  <div>
    <%= form.submit 'Update Cabana', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', admin_cabanas_path %>
