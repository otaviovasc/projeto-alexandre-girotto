<h1>Items for <%= @filial.name %></h1>

<%= link_to 'New Item', new_filial_item_path(@filial) %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Category</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.quantity %></td>
        <td><%= item.category %></td>
        <td><%= link_to 'Edit', edit_filial_item_path(@filial, item) %></td>
        <td><%= link_to 'Delete', filial_item_path(@filial, item), data: { turbo_method: :delete, confirm: 'Are you sure?' } %></td>
        <td><%= link_to '+', increment_filial_item_path(@filial, item), data: { turbo_method: :patch } %></td>
        <td><%= link_to '-', decrement_filial_item_path(@filial, item), data: { turbo_method: :patch } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
