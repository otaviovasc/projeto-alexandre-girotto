<h1>New Cabana</h1>

<div class="navigation">
  <%= link_to 'Back to Cabanas', admin_cabanas_path, class: 'btn btn-secondary' %> |
  <%= link_to 'Admin Dashboard', authenticated_root_path, class: 'btn btn-secondary' %>
</div>

<%= form_with model: [:admin, @cabana], local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label 'Price/day R$' %>
    <%= form.number_field :price, step: 0.01 %>
  </div>

  <div>
    <%= form.label :filial %>
    <%= form.collection_select :filial_id, Filial.all, :id, :name %>
  </div>

  <div>
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <div>
    <%= form.submit 'Create Cabana', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', admin_cabanas_path %>
