<h1>Manage Price Rules and Holidays for <%= @cabana.name %></h1>

<h2>Price Rules:</h2>
<%= form_with model: @price_rule, url: admin_cabana_price_rules_path(@cabana), local: true do |form| %>
  <div>
    <%= form.label :day_type, "Day Type" %>
    <%= form.select :day_type, [['Weekday', 'weekday'], ['Weekend', 'weekend'], ['Holiday', 'holiday']], {}, class: 'form-control' %>
  </div>
  <div>
    <%= form.label :price, "Price" %>
    <%= form.number_field :price, step: 0.01, class: 'form-control' %>
  </div>
  <%= form.submit "Save Price Rule", class: "btn btn-primary mt-2" %>
<% end %>

<h3>Existing Price Rules:</h3>
<table class="table">
  <thead>
    <tr>
      <th>Day Type</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @cabana.price_rules.each do |rule| %>
      <tr>
        <td><%= rule.day_type.capitalize %></td>
        <td><%= number_to_currency(rule.price) %></td>
        <td>
          <%= link_to 'Delete', admin_cabana_price_rule_path(@cabana, rule), data: { turbo_method: :delete }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Holidays:</h2>
<%= form_with model: @holiday, url: admin_holidays_path, local: true do |form| %>
  <div>
    <%= form.label :name, "Holiday Name" %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div>
    <%= form.label :date, "Holiday Date" %>
    <%= form.date_field :date, class: 'form-control' %>
  </div>
  <%= form.submit "Save Holiday", class: "btn btn-primary mt-2" %>
<% end %>

<h3>Existing Holidays:</h3>
<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Holiday</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @holidays.each do |holiday| %>
      <tr>
        <td><%= holiday.date.strftime("%d/%m/%Y") %></td>
        <td><%= holiday.name %></td>
        <td>
          <%= link_to 'Delete', admin_holiday_path(holiday), data: { turbo_method: :delete }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Cabana', admin_cabana_path(@cabana), class: 'btn btn-secondary' %>
